<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.PodcastListActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:elevation="6dp"
            android:id="@+id/plist_imagevg">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription"
                android:id="@+id/plist_image"
                android:src="@color/colorPrimary"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription"
                android:id="@+id/plist_gradient"
                android:src="@drawable/podcast_item_gradient"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/plist_author"
                android:layout_marginHorizontal="18dp"
                android:layout_marginBottom="6dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:id="@+id/plist_title"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/plist_epcount"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="26dp"

                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorTextSecondary"
                android:id="@+id/plist_author"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="18dp"
                android:layout_marginBottom="26dp"
                android:textSize="16sp"
                android:textColor="@color/colorTextPrimary"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAllCaps="true"
                android:alpha="0.8"
                android:id="@+id/plist_epcount"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plist_description_header"
            app:layout_constraintTop_toBottomOf="@id/plist_imagevg"
            android:layout_marginTop="6dp"
            android:text="@string/description"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"
            android:paddingHorizontal="14dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plist_description"
            app:layout_constraintTop_toBottomOf="@id/plist_description_header"
            android:text="@string/data_retrieval_error"
            android:textSize="14sp"
            android:textColor="@color/colorTextPrimary"
            android:paddingHorizontal="14dp"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plist_description"
            android:layout_marginTop="24dp"
            android:id="@+id/plist_pb"/>
        <androidx.recyclerview.widget.RecyclerView
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/plist_description"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="26dp"
            android:paddingBottom="48dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:scrollbars="none"
            android:id="@+id/plist_rv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>