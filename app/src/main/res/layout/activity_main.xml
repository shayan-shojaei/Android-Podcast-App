<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="?actionBarSize"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:id="@+id/main_appbar">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/main_appbar_refresh"
            app:layout_constraintEnd_toStartOf="@id/main_appbar_gridtoggle"
            android:text="@string/app_name"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:elevation="6dp"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:id="@+id/main_appbar_tv"
            />
        <ProgressBar
            android:layout_width="16dp"
            android:layout_height="16dp"
            style="@style/Widget.AppCompat.ProgressBar"
            android:progressBackgroundTint="@android:color/transparent"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorTextPrimary"
            app:layout_constraintTop_toTopOf="@id/main_appbar_tv"
            app:layout_constraintBottom_toBottomOf="@id/main_appbar_tv"
            app:layout_constraintStart_toEndOf="@id/main_appbar_tv"
            android:layout_marginStart="4dp"
            android:id="@+id/main_appbar_pb"
            android:visibility="gone"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_refresh"
            android:tint="@color/colorTextPrimary"
            android:id="@+id/main_appbar_refresh"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_grid"
            android:tint="@color/colorTextPrimary"
            android:id="@+id/main_appbar_gridtoggle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_appbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.AppCompat.ProgressBar"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        android:id="@+id/main_pb"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_appbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="true"
        android:text="@string/data_retrieval_error"
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/main_error"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_appbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/main_rv"
        android:visibility="gone"
        app:fastScrollEnabled="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        app:spanCount="2"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
</androidx.constraintlayout.widget.ConstraintLayout>